{
  "compilerOptions": {
    "strict": true,
    "target": "es2019",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "inlineSourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "declaration": false,
    "noEmit": true
  },
  "rules": {
    "semicolon": [
      true,
      "always"
    ]
  },
  "exclude": [
    "./node_modules/**/*"
  ],
  "include": [
    "app/**/*"
  ]
}
